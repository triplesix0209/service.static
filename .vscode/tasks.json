{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "problemMatcher": "$msCompile",
            "command": "dotnet",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "SolutionDir": "${workspaceFolder}"
                }
            },
            "args": [
                "build",
                "--no-incremental",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}